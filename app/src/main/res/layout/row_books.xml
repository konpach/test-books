<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_padding_start"

    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/image_view_thumb"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_top"
        android:layout_toRightOf="@+id/image_view_thumb"
        android:textAppearance="@style/Row_Title"
        tools:text="Country quilting" />

    <TextView
        android:id="@+id/text_view_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_title"
        android:layout_toRightOf="@+id/image_view_thumb"

        android:textAppearance="@style/Row_Subtitle"
        tools:text="Meredith Books" />
    <View style="@style/RowDivider" />
</RelativeLayout>